
  
<div class="card" style="background-color:#f6f6f6;">
  <div class="card-body">
    <%= form_with model: anime do |form| %>
      
      <div class="col-6">
          <div class="form-group">
            <%= form.label :user_id %>
            <%= form.text_field :user_id, class: "form-control" %>
            <% anime.errors.full_messages_for(:user_id).each do |message| %>
                <div><%= message %></div>
            <% end %>
          </div>
      </div>

      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
        <% anime.errors.full_messages_for(:name).each do |message| %>
                <div><%= message %></div>
            <% end %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_field :description, class: "form-control" %>
        <% anime.errors.full_messages_for(:description).each do |message| %>
                <div><%= message %></div>
            <% end %>
      </div>
      <div class="form-group">
        <%= form.label :image_url %>
        <%= form.text_field :image_url, class: "form-control" %>
        <% anime.errors.full_messages_for(:description).each do |message| %>
                <div><%= message %></div>
            <% end %>
      </div>
      <div class="form-row">
        <div class="col-6">
          <div class="form-group">
            <%= form.label :genres %>
            <%= form.text_field :genres, class: "form-control" %>
            <% anime.errors.full_messages_for(:genres).each do |message| %>
                <div><%= message %></div>
            <% end %>
          </div>
        </div>
        <div class="col-6">
          <div class="form-group">
            <%= form.label :episodes %>
            <%= form.number_field :episodes, class: "form-control" %>
            <% anime.errors.full_messages_for(:episodes).each do |message| %>
                <div><%= message %></div>
            <% end %>
          </div>
        </div>
    
        <div class="col-6">
          <div class="form-group">
            <%= form.label :studios %>
            <%= form.text_field :studios, class: "form-control" %>
            <% anime.errors.full_messages_for(:studios).each do |message| %>
                <div><%= message %></div>
            <% end %>
          </div>
        </div>
        <div class="col-6">
          <div class="form-group">
            <%= form.label :duration %>
            <%= form.number_field :duration, class: "form-control" %>
            <% anime.errors.full_messages_for(:duration).each do |message| %>
                <div><%= message %></div>
            <% end %>
          </div>
        </div>
        <div class="col-6">
          <div class="form-group">
            <%= form.label :situation %>
            <%= form.text_field :situation, class: "form-control" %>
            <% anime.errors.full_messages_for(:situation).each do |message| %>
                <div><%= message %></div>
            <% end %>
          </div>
        </div>

      </div>
      <%= form.submit %>
    <% end %>
  </div>
</div>
