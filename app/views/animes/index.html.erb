<%= form_tag busca_animes_path, method: :get,  remote: true do %>
  <%= text_field_tag :q, params[:q], placeholder: "Digite para buscar..." %>
  <%= submit_tag "Buscar" %>
<% end %>
<section class="position-relative overflow-hidden pt-5 pt-lg-3">
	<!-- Content START -->
	<div class="container background">
		<!-- Title -->
		<div class="row align-items-center g-5">
			<div class="col-lg-5 col-xl-6 position-relative z-index-1 text-center text-lg-start mb-5 mb-sm-0">
				<h1 class="mb-0 display-6">MyAnimes. Crie sua lista de animes favoritos!</h1>
			</div>
		</div>
	</div>
</section>
<!-- Content END -->

<section>
	<div class="container">
		<div class="row mb-4 title">
			<div class="col-lg-8 mx-auto text-center">
				<h2 class="fs-1 title">Seus Animes</h2>
			</div>
		</div>

		<!-- Cards content START -->
		<div class="tab-content" id="course-pills-tabContent">
			<%# <%= render 'card', anime: @detalhes_animes %>

			<% @detalhes_animes.each do |anime| %>
    <div class="anime-result">
      <h2><%= anime["title"] %></h2>
      <% if anime["images"] && anime["images"]["jpg"] && anime["images"]["jpg"]["image_url"].present? %>
        <%= image_tag anime["images"]["jpg"]["image_url"], alt: "Imagem do Anime", size: "100x100" %>
        <% anime[:mal_id] %>
        <%= link_to "Ver Detalhes", show_from_json_animes_path(anime: anime.to_json), class: "show-anime-link" %>
      <% else %>
        <p><em>Nenhuma imagem dispon√≠vel</em></p>
      <% end %>
    </div>
  <% end %>
			
		</div>
	</div>
</section>
